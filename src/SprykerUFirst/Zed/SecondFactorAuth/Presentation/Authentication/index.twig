{% extends '@SecurityGui/Layout/layout.twig' %}

{% form_theme form '@SecondFactorAuth/Layout/form.twig' %}

{% block content %}

    <div class="second-factor-auth">
        {{ form_start(form) }}

            {% include '@SecurityGui/Partial/form-message.twig' %}

            <p>
                {{ 'You are using second factor authentication. Use your mobile application and enter the code into the field below.' | trans }}
            </p>

            {{ form_errors(form) }}

            {{ form_row(form.code) }}

            <div class="form-group"><button class="btn btn-success btn-block btn-outline btn" type="submit">{{ 'Authenticate' | trans }}</button></div>


            {{ form_rest(form) }}

        {{ form_end(form) }}

        <a href='/auth/logout'>{{ 'Logout' | trans }}</a>
    </div>

{% endblock %}
